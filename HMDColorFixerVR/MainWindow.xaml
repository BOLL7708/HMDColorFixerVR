<Window x:Class="HMDColorFixerVR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMDColorFixerVR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="SliderR" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="285" Maximum="200" Value="100" ValueChanged="SliderR_ValueChanged" MouseUp="SliderR_MouseUp"/>
        <Slider x:Name="SliderG" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="285" Maximum="200" Value="100"/>
        <Slider x:Name="SliderB" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="285" Maximum="200" Value="100"/>

    </Grid>
</Window>
